# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /api/tasks                  controllers.TodoController.getTasks
GET     /api/task/:id               controllers.TodoController.getTask(id: String)
DELETE  /api/task/:id               controllers.TodoController.deleteTask(id: String)
POST    /api/task                   controllers.TodoController.addTask
PUT     /api/task                   controllers.TodoController.editTask
PATCH   /api/task/:id/:status       controllers.TodoController.modifyTask(id: String, status: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
